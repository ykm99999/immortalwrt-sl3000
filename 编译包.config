# =========================
# 基础工具链支持
# =========================
CONFIG_MODULES=y
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_opkg=y

# =========================
# Docker 支持
# =========================
CONFIG_PACKAGE_luci-app-docker=y
CONFIG_PACKAGE_kmod-veth=y
CONFIG_PACKAGE_kmod-bridge=y
CONFIG_PACKAGE_kmod-overlay=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-btrfs=y
CONFIG_PACKAGE_kmod-fs-xfs=y
CONFIG_PACKAGE_kmod-cgroup=y
CONFIG_PACKAGE_kmod-nf-nat=y

# =========================
# Cloudflare 隧道
# =========================
CONFIG_PACKAGE_cloudflared=y

# =========================
# 网络加速 (Turbo ACC)
# =========================
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_kmod-shortcut-fe=y
CONFIG_PACKAGE_kmod-tcp-bbr=y
CONFIG_PACKAGE_kmod-nf-flow=y
CONFIG_PACKAGE_nft-fullcone=y   # 全锥型 NAT 支持
CONFIG_PACKAGE_luci-app-sqm=y   # 智能队列管理 SQM

# =========================
# Passwall2 支持
# =========================
CONFIG_PACKAGE_luci-app-passwall2=y
# 已依赖 tun/nat/conntrack
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_kmod-nf-nat=y
CONFIG_PACKAGE_kmod-nf-conntrack=y

# =========================
# 固件在线升级
# =========================
CONFIG_PACKAGE_luci-app-attendedsysupgrade=y   # LuCI 在线升级界面
CONFIG_PACKAGE_rpcd-mod-iwinfo=y               # 提供升级所需的系统信息
CONFIG_PACKAGE_attendedsysupgrade-common=y     # 在线升级通用支持
